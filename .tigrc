# View settings
set blame-view  = date:short author:full file-name:no id:yes,color line-number:yes,interval=1 text
set main-view = line-number:yes,interval=5 id date author commit-title:graph=yes,refs=yes
set status-view = line-number:no,interval=5 status:short file-name
set tree-view = line-number:no,interval=5 mode author:full file-size:no date:default id:no file-name

# Number of lines to show around diff changes
set diff-context = 5

# Ignore case when searching
set ignore-case = yes

# Mouse support
set vertical-split = yes
set mouse = yes
set mouse-scroll = 5

# Diff
set diff-options = -m --first-parent

