upstream backend-unicorn {
  server unix:/var/www/myapp/tmp/unicorn.sock;
}

server {
  listen 80;
  server_name www.example.com;
  root /var/www/myapp;

  access_log /usr/local/nginx/vhosts/www.example.com/logs/access.log ltsv;
  error_log /usr/local/nginx/vhosts/www.example.com/logs/error.log info;

  location / {
    try_files $uri @proxy_to_rails;
  }

  location @proxy_to_rails {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto http;
    proxy_redirect off;

    proxy_pass http://backend-unicorn;
  }
}

server {
  listen 443 ssl;
  server_name www.example.com;
  root /var/www/myapp;

  access_log /usr/local/nginx/vhosts/www.example.com/logs/ssl_access.log ltsv;
  error_log /usr/local/nginx/vhosts/www.example.com/logs/ssl_error.log info;

  ssl on;
  ssl_certificate /usr/local/nginx/vhosts/www.example.com/ssl.crt/server.chained.crt;
  ssl_certificate_key /usr/local/nginx/vhosts/www.example.com/ssl.key/server.key;

  ssl_session_timeout 5m;

  ssl_protocols SSLv2 SSLv3 TLSv1;
  ssl_ciphers HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  location / {
    try_files $uri @proxy_to_rails;
  }

  location @proxy_to_rails {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto http;
    proxy_redirect off;

    proxy_pass http://backend-unicorn;
  }
}
